<% provide(:title, 'All purposes') %>
<div class="col-md-12">
  <div class="card">
    <div class="card-header" data-background-color="purple">
      <h4 class="title">All purposes</h4>
      <p class="category">Admin can create new purpose</p>
    </div>
    <% if @purposes.count == 0 %>
        <div class="alert alert-danger">
          No careers. <%= link_to 'Create now!', new_admin_career_path, class: 'btn btn-primary' %>
        </div>
    <% else %>
        <div class="card-content table-responsive table-hover table-striped table-bordered">
          <table class="table">
            <thead class="text-primary">
            <th>Name</th>
            <th>Actions</th>
            </thead>
            <tbody id="all_purposes">
            <%= render @purposes %>
            </tbody>
          </table>
          <div class="text-center"><%= will_paginate %></div>
        </div>
    <% end %>
    <div class="card-footer">
      <%= link_to 'Create new purpose',
                  new_admin_purpose_path,
                  class: 'btn btn-primary',
                  remote: true,
                  id: 'new_purpose_link' %>
    </div>
  </div>
</div>