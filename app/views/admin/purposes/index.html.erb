<% provide(:title, 'All purposes') %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>All purposes</h4>
  </div>
  <div class="panel-body">
    <div class="text-center"><%= will_paginate %></div>
    <% if @purposes.count == 0 %>
      No purposes. <%= link_to 'Create now!', new_admin_purpose_path, class: 'btn btn-primary' %>
    <% else %>
      <table class="table table-bordered table-hover table-striped table-responsive">
        <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <%= render @purposes %>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= link_to 'Create new purpose', new_admin_purpose_path, class: 'btn btn-primary' %>
  </div>
</div>