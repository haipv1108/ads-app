<%= form_for([:admin, @purpose], remote: true) do |f| %>
  <p id="message"></p>
  <div class="form-group label-floating">
    <%= f.label :name, "Purpose's name", class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>